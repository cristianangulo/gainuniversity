{% extends '::perfil.html.twig' %}


{% block contenido %}

  <div id="tabs" class="tabs">
    <nav>
      <ul>
        <li><a href="#section-4" class="icon-lab"><span>Perfil</span></a></li>
        <li><a href="#section-1" class="icon-shop"><span>Cursos</span></a></li>
      </ul>
    </nav>
    <div class="content">
      <section id="section-1">
      <div class="col-md-6">
        <div class="panel panel-default">
          <div class="panel-body">
            {% form_theme formPerfil 'ElearnBundle:Form:admin-form.html.twig' %}
            {{ form(formPerfil, {'attr':{'novalidate':'novalidate'}}) }}
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="panel panel-default">
          <div class="panel-body">
            {% form_theme formPassword 'ElearnBundle:Form:admin-form.html.twig' %}
            {{ form(formPassword, {'attr':{'novalidate':'novalidate'}}) }}
          </div>
        </div>
      </div>


      </section>
      <section id="section-3">

        <table class="table">
      <caption>Tus cursos</caption>
      <thead>
        <tr>
          <th>#</th>
          <th>First Name</th>
        </tr>
      </thead>
      <tbody>
        {% for cursos in usuario.curso %}
          <tr>
            <th scope="row">1</th>
            <td>{{ cursos.cursos.curso }}</td>
            <td class="text-center">
              <a href="{{ path('front_curso', {'id' : cursos.cursos.id }) }}" class="btn btn-default">Ver curso</a>
            </td>
          </tr>

        {% endfor %}
      </tbody>
    </table>


      </section>
    </div><!-- /content -->
  </div><!-- /tabs -->
{% endblock %}
