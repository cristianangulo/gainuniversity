<!DOCTYPE html>
<html lang="es" class="no-js">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>GainUniversity.com</title>

		<link rel="shortcut icon" href="../favicon.ico">

		<link href="{{ asset('css/jquery-ui.min.css') }}" rel="stylesheet" type="text/css" />

		<!--Bootstrap-->
		<link href="{{ asset('assets/bootstrap/css/bootstrap.css') }}" rel="stylesheet" type="text/css" />

		<link href="{{ asset('css/admin.css') }}" rel="stylesheet" type="text/css" />


	</head>
	<body>
		<div class="container" id="container-main">
			{% include 'includes/headAdmin.html.twig' %}
			<div id="body">
				<div class="col-md-3">
					<ul class="list-group">
						<a href="{{ path('admin_cursos') }}" class="list-group-item">Cursos</a>
						<a href="{{ path('admin_modulos') }}" class="list-group-item">Módulos</a>
						<a href="{{ path('admin_secciones') }}" class="list-group-item">Ítems</a>
						<a href="{{ path('admin_quiz') }}" class="list-group-item">Quiz's</a>
					</ul>

					<ul class="list-group">
						<a href="{{ path('admin_msn') }}" class="list-group-item">Mensajería</a>
					</ul>

					<ul class="list-group">
						{% if is_granted('ROLE_ADMIN') %}
						<a href="{{ path('usuarios') }}" class="list-group-item">Usuarios</a>
						{% endif %}
						{% if is_granted('ROLE_SUPER_ADMIN') %}
						<a href="{{ path('roles') }}" class="list-group-item">Roles</a>
						{% endif %}
					</ul>

				</div>
				<div class="col-md-9">
					<div class="panel panel-default">
						<div class="panel-body">
							<div class="page-header"><h1>{% block title_contenido %}{% endblock %}</h1></div>

							<div class="btn-group">
								{% block navbar_contenido %}{% endblock %}
							</div>
						</div>
					</div>
					{% include 'includes/mensajero.html.twig'%}
					<div class="panel panel-default">
						<div class="panel-body">

							{% block body_contenido %}


							{% endblock %}
						</div>
					</div>
				</div>


			</div>
		</div>
		<script type="text/javascript" charset="utf-8" src="{{ asset('js/jQuery.js') }}"></script>
		<script type="text/javascript" charset="utf-8" src="{{ asset('js/jquery-ui.js') }}"></script>
		<script type="text/javascript" charset="utf-8" src="{{ asset('assets/bootstrap/js/bootstrap.min.js') }}"></script>
		<script type="text/javascript" charset="utf-8" src="{{ asset('js/funciones.js') }}"></script>
		<script src="{{ asset('assets/vertical-menu/js/modernizr.custom.js')}} "></script>
	</body>
</html>
