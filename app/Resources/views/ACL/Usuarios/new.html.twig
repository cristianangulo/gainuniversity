{% extends '::admin.html.twig' %}

{% block title_contenido %}

  Crear usuario

{% endblock %}

{% block navbar_contenido %}

    <a href="{{ path('usuarios') }}" class="btn btn-default">
      <span class="glyphicon glyphicon-chevron-left"></span>
      Regresar
    </a>
    <a href="{{ path('usuarios_new') }}" class="btn btn-default">
      <span class="glyphicon glyphicon-plus-sign"></span>
      Crear usuario
    </a>

{% endblock %}

{% block body_contenido %}

    <div class="alert alert-success">
      <strong>Si el campo Password está vacío se generará una contraseña aleatoria</strong>
    </div>
    <form class="form" action="" method="post" novalidate="novalidate">
        {{ form_widget(usuario_form) }}
        <button type="submit" class="btn btn-success">
            Guardar
            <span class="glyphicon glyphicon-floppy-save"></span>
        </button>
    </form>


    <ul class="record_actions">
      <li>
        <a href="{{ path('usuarios') }}">
          Regresar
        </a>
      </li>
    </ul>
{% endblock %}
