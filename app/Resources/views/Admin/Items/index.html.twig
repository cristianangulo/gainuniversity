{% extends '::admin.html.twig' %}

{% block title_contenido %} Ítems {% endblock %}

{% block navbar_contenido %}

    <a href="{{ path('admin_secciones_new') }}" class="btn btn-default">
      <span class="glyphicon glyphicon-plus-sign"></span>
      Crear Ítem
    </a>

{% endblock %}

{% block body_contenido %}

    <table class="dataTables table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>item</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td class="col-md-1"><a href="{{ path('admin_secciones_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>
                    <h1>{{ entity.seccion }}</h1>
                    <p>
                        {{ entity.descripcion }}
                    </p>
                </td>
                <td class="text-right">
                  <a class="btn btn-default" href="{{ path('admin_secciones_edit', { 'id': entity.id }) }}">{{ btn_editar }}</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <ul class="record_actions">
      <li>
        <a href="{{ path('admin_secciones_new') }}">
          Crear ítem
        </a>
      </li>
    </ul>
    {% endblock %}
